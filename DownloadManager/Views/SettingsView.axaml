<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:DownloadManager.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DownloadManager.Views.SettingsView"
             x:CompileBindings="True"
             x:DataType="viewModels:SettingsViewModel">
    <Panel>
        <StackPanel>
            <TextBlock Text="Theme selection: " Margin="10"/>
            <ComboBox SelectedItem="{Binding ChosenTheme}"
                      Margin="5"
                      Items="{Binding Themes}" PlaceholderText="Select theme..."/>
        </StackPanel>
        
    </Panel>
</UserControl>
