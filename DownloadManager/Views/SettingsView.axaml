<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:DownloadManager.ViewModels"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="DownloadManager.Views.SettingsView"
             x:CompileBindings="True"
             x:DataType="viewModels:SettingsViewModel">
    <Panel>
        <StackPanel>
            <TextBlock Text="Theme selection: " Margin="10"/>
            <ComboBox SelectedItem="{Binding ChosenTheme}"
                      Margin="5"
                      Items="{Binding Themes}" PlaceholderText="Select theme..."/>
            <TextBlock Text="Accent color selection: "/>
            <ui:ColorPickerButton
                UseColorPalette="True" UseColorTriangle="True" UseSpectrum="True" UseColorWheel="True"
                Color="{Binding ChosenAccentColor}"/>
        </StackPanel>
    </Panel>
</UserControl>
